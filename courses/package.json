    "@gustafdahl/schoolable-loadlanguages": "^1.0.0",
    "@gustafdahl/schoolable-middlewares": "^1.1.0",
    "@gustafdahl/schoolable-utils": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.12.2",
    "luxon": "^2.0.2",
    "mongoose": "^6.0.7",
    "node-nats-streaming": "^0.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
